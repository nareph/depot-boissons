// src/ui/dialogs/delete_product_dialog.slint 
import { StandardButton, VerticalBox } from "std-widgets.slint";

export component DeleteProductDialog inherits Dialog {
    callback confirmed();
    callback cancelled();
    
    in-out property <string> product_name;
    
    title: "Confirmer la Suppression";
    width: 350px;
    height: 200px;
    
    // UN SEUL élément non-bouton autorisé
    VerticalBox {
        padding: 20px;
        spacing: 20px;
        
        Text {
            text: "⚠️ Attention";
            font-size: 18px;
            font-weight: 600;
            horizontal-alignment: center;
            color: orange;
        }
        
        Text {
            text: "Êtes-vous sûr de vouloir supprimer le produit :\n\"" + root.product_name + "\" ?";
            font-size: 14px;
            horizontal-alignment: center;
            wrap: word-wrap;
        }
        
        Text {
            text: "Cette action est irréversible.";
            font-size: 12px;
            color: red;
            horizontal-alignment: center;
        }
    }
    
    // Boutons StandardButton ou Button avec dialog-button-role
    StandardButton { 
        kind: cancel; 
        clicked => { root.cancelled(); }
    }
    
    StandardButton { 
        kind: ok; 
        clicked => { root.confirmed(); }
    }
}