// src/ui/dialogs/delete_user_dialog.slint 
import { StandardButton, VerticalBox } from "std-widgets.slint";

export component DeleteUserDialog inherits Dialog {
    callback confirmed();
    callback cancelled();
    
    in-out property <string> username;
    
    title: "Confirmer la Suppression";
    //width: 350px;
    height: 220px;
    
    // UN SEUL élément non-bouton autorisé
    VerticalBox {
        padding: 20px;
        spacing: 20px;
        
        Text {
            text: "⚠️ Attention";
            font-size: 18px;
            font-weight: 600;
            horizontal-alignment: center;
            color: orange;
        }
        
        Text {
            text: "Êtes-vous sûr de vouloir supprimer l'utilisateur :\n\"" + root.username + "\" ?";
            font-size: 14px;
            horizontal-alignment: center;
            wrap: word-wrap;
        }
        
        Text {
            text: "Cet utilisateur perdra définitivement l'accès au système.";
            font-size: 12px;
            color: red;
            horizontal-alignment: center;
        }
    }
    
    // Boutons StandardButton
    StandardButton { 
        kind: cancel; 
        clicked => { root.cancelled(); }
    }
    
    StandardButton { 
        kind: ok; 
        clicked => { root.confirmed(); }
    }
}