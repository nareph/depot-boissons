import { VerticalBox } from "std-widgets.slint";
import { AppTheme, AppStyles } from "../../theme/colors.slint";

export component AuthLayout inherits Window {
    in-out property <length> card_width: 360px;
    in-out property <length> card_height: 480px;

    width: 420px;
    height: 560px;

    Rectangle {
        width: 100%;
        height: 100%;
        background: AppStyles.container-main;

        Rectangle {
            width: root.card_width;
            height: root.card_height;
            x: (parent.width - self.width) / 2;
            y: (parent.height - self.height) / 2;
            background: AppTheme.background-overlay-medium;
            border-radius: 20px;
            border-width: 1px;
            border-color: AppTheme.border-light;
            drop-shadow-blur: 20px;
            drop-shadow-color: AppTheme.shadow-light;

            @children
        }
    }
}