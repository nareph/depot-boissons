// src/ui/components/card.slint 

import { VerticalBox, HorizontalBox } from "std-widgets.slint";
import { AppTheme, AppStyles } from "../theme/colors.slint";

export component ModernCard inherits Rectangle { 
    in property <string> title;
    in property <string> value;
    in property <color> accent_color;
    in property <string> icon;
    
    background: AppTheme.background-overlay-light;
    border-radius: 16px;
    drop-shadow-blur: 10px;
    drop-shadow-color: AppTheme.shadow-light;
    
    animate background { 
        duration: 200ms; 
        easing: AppStyles.animation-ease; 
    }
    animate drop-shadow-blur { 
        duration: 200ms; 
        easing: AppStyles.animation-ease; 
    }
    
    states [
        hover when ta.has-hover: {
            background: AppTheme.background-overlay-medium;
            drop-shadow-blur: AppStyles.shadow-blur;
        }
    ]
    
    ta := TouchArea {
        mouse-cursor: pointer;
    }
    
    VerticalBox {
        padding: 25px;
        spacing: 15px;
        
        HorizontalBox {
            alignment: space-between;
            
            Text {
                text: root.icon;
                font-size: 28px;
                color: AppTheme.text-primary;
            }
            
            Rectangle {
                width: 4px;
                height: 30px;
                background: root.accent_color;
                border-radius: 2px;
                animate background { 
                    duration: 300ms; 
                    easing: AppStyles.animation-ease; 
                }
            }
        }
        
        VerticalBox {
            spacing: 8px;
            
            Text {
                text: root.title;
                font-size: 14px;
                font-weight: 500;
                color: AppStyles.text-body;
                horizontal-alignment: left;
                overflow: elide;
            }
            
            Text {
                text: root.value;
                font-size: 24px;
                font-weight: 700;
                color: AppStyles.text-title;
                horizontal-alignment: left;
                overflow: elide;
            }
        }
    }
}