import { VerticalBox } from "std-widgets.slint";
import { AuthLayout } from "../components/auth/auth_layout.slint";
import { IconLineEdit } from "../components/auth/icon_line_edit.slint";
import { ActionButton } from "../components/auth/action_button.slint";
import { StatusBox } from "../components/auth/status_box.slint";

export component ChangePasswordUserWindow inherits AuthLayout {
    title: "Changer mon mot de passe";
    in-out property<string> old_password_text: "";
    in-out property<string> new_password_text: "";
    in-out property<string> confirm_password_text: "";
    in-out property<string> status_text: "";
    in-out property<bool> loading: false;
    in-out property<bool> is_error: false;
    callback save_clicked(string, string);

    //card-width: 400px;
    //card-height: 580px;
    
    VerticalBox {
        padding: 25px;
        spacing: 15px;
        alignment: center;

        Rectangle { // Ic√¥ne
            width: 75px; height: 75px; border-radius: 37.5px;
            background: @linear-gradient(45deg, #ff6b6b 0%, #ee5a24 100%);
            Text { text: "üîë"; font-size: 34px; vertical-alignment: center; horizontal-alignment: center; }
        }
        Text { text: "Changer mon mot de passe"; font-size: 19px; font-weight: 600; color: white; }
        
        VerticalBox {
            spacing: 12px;
            IconLineEdit { icon: "üîê"; placeholder_text: "Ancien mot de passe"; is_password: true; text <=> root.old_password_text; }
            IconLineEdit { icon: "üÜï"; placeholder_text: "Nouveau mot de passe"; is_password: true; text <=> root.new_password_text; }
            IconLineEdit { icon: "‚úÖ"; placeholder_text: "Confirmer le mot de passe"; is_password: true; text <=> root.confirm_password_text; }
        }
        
        ActionButton {
            text: "Enregistrer";
            loading: root.loading;
            enabled: !root.loading && root.old_password_text != "" && root.new_password_text != "" && root.new_password_text == root.confirm_password_text;
            clicked => { root.save_clicked(root.old_password_text, root.new_password_text) }
        }

        StatusBox { text: root.status_text; is_error: root.is_error; }
    }
}